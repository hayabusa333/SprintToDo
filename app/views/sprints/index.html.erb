<h1>Listing sprints</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= sprint.start %></td>
        <td><%= link_to 'Show', :controller => "tasks", :action => "index", :start => sprint.start %></td>
	<% if Time.now.weeks_ago(2) < sprint.start  %>
          <td><%= link_to 'Edit', edit_sprint_path(sprint) %></td>
          <td><%= link_to 'Destroy', sprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sprint', new_sprint_path %>
